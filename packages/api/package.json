{
  "name": "@comix/api",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "build": {
    "esbuild": {
      "entry": "./src/**/*.ts",
      "outdir": "./dist",
      "format": "cjs"
    }
  },
  "scripts": {
    "dev": "tmax",
    "build": "../../build.js api",
    "build:types": "tsc --declaration --emitDeclarationOnly --project . --outDir dist",
    "start": "node dist/index.js",
    "start:watch": "nodemon dist/index.js",
    "schema:build": "graphql-codegen --config codegen.yml",
    "schema:build:watch": "graphql-codegen --config codegen.yml --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-resolvers": "^1.19.1",
    "@types/faker": "^5.5.3",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.14",
    "nodemon": "^2.0.7",
    "tmax": "^0.2.1",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@comix/comicvine-metadata-adapter": "file:../comicvine-metadata-adapter",
    "@comix/library": "file:../library",
    "@comix/scan-directory": "file:../scan-directory",
    "apollo-server-express": "^2.23.0",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.12.3",
    "graphql-tools": "^7.0.4",
    "is-subdir": "^1.2.0"
  }
}
